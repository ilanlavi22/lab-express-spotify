{{>search}}
<div class='feature'>
  <h3>Artist Results: {{capitalize keywords}}</h3>
  <div class='featured-container'>
    {{#each artist}}
      <div class='featured-item'>
        <div class='featured-img'>
          <a href='/albums/{{id}}'>
            {{#if images.0.url}}
              <img src='{{images.0.url}}' alt='album for {{name}}' />
            {{else}}
              <img src='/images/album_placeholder.png' alt='{{name}}' />
            {{/if}}
          </a>
        </div>
        <div class='featured-name'><a href=''>{{name}}</a></div>
      </div>
    {{/each}}
  </div>
</div>